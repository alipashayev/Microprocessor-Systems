#include <avr/io.h>

void uart_init(void)
{
  uint16_t ubrr = 103;   // 9600 baud @ 16 MHz

  UBRR0H = (ubrr >> 8);
  UBRR0L = ubrr;

  UCSR0B = (1 << RXEN0) | (1 << TXEN0);   
  UCSR0C = (1 << UCSZ01) | (1 << UCSZ00); 
}

uint8_t uart_receive(void)
{
  while (!(UCSR0A & (1 << RXC0))); 
  return UDR0;
}

void uart_transmit(uint8_t data)
{
  while (!(UCSR0A & (1 << UDRE0))); 
  UDR0 = data;
}

void setup()
{
  uart_init();
}

void loop()
{
  uint8_t rx = uart_receive();

  if (rx == '1' || rx == '2' || rx == '3')
  {
    uart_transmit(rx); 
  }
}
